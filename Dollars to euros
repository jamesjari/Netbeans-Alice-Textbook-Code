/**
 *DollarsToErousConverter.java converts dollars to euros
 *
 * @author 488701
 * @version  for Alice+Java, Alice 3 edition
 */
import java.util.Scanner;

public class DollarsToEurosConverter {
    
    public static void main(String[] args ){
        System.out.print ("How meny dollars do you want to convert") ;
        Scanner keybourd = new Scanner(System.in);
        double dollars = keybourd.nextDouble();
        System.out.print ("What is the euros-per-dollar exchange rate");
        double eurosPerDollar = keybourd.nextDouble();
        double euros = dollars * eurosPerDollar;
        System.out.printf ("%.2f dollars => %.2f euros", dollars, euros);
    }
}
